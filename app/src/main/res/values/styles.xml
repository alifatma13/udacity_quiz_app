<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal" tools:ignore="NewApi">@color/primary</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">@color/primary</item>
        <item name="android:colorControlHighlight" tools:ignore="NewApi">@color/primary</item>
        <item name="android:textColorPrimaryDisableOnly">@color/primary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="buttonTint">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>


</resources>
